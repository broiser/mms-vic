<Window x:Class="VideoFromImageCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VIC - Video From Image Creator" Height="800" Width="800">
    <Grid Margin="0,0,2,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="191" Margin="44,51,0,0" VerticalAlignment="Top" Width="296" Grid.RowSpan="2"/>

        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="134,90,0,0"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="72,87,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="134,121,0,0"/>
        <Label Content="Path:" HorizontalAlignment="Left" Margin="72,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Filetype:" HorizontalAlignment="Left" Margin="72,149,0,0" VerticalAlignment="Top"/>
        <Label Content="VideoFromImage Creator"  HorizontalAlignment="Left" Margin="44,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.342,-0.192" Width="719" Height="36"/>
        <ComboBox Name="filetypeCombobox" HorizontalAlignment="Left" Margin="134,153,0,0" VerticalAlignment="Top" Width="120"/>
        <DataGrid Name="pictureGrid" AutoGenerateColumns="False" DataContext="{Binding}" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="44,74,0,0" Grid.Row="1" VerticalAlignment="Top" Height="380" Width="296">

            <DataGrid.Columns>
                <DataGridTextColumn x:Name="cPath" Binding="{Binding Path}" Header="Name" />
                <DataGridTextColumn x:Name="cDuration" Binding="{Binding Duration}" Header="Duration" />
            </DataGrid.Columns>

        </DataGrid>
        <Button Content="Add File" HorizontalAlignment="Left" Margin="345,103,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="AddFile_Click"/>
        <Button Content="Add Folder" HorizontalAlignment="Left" Margin="345,130,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="AddFolder_Click"/>
        <Button Content="Add Effect" HorizontalAlignment="Left" Margin="345,157,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="AddEffect_Click"/>
        <Button Content="Move Up" HorizontalAlignment="Left" Margin="345,183,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="MoveUp_Click"/>
        <Button Content="Move Down" HorizontalAlignment="Left" Margin="345,210,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="MoveDown_Click"/>
        <Button Content="Set Duration" HorizontalAlignment="Left" Margin="345,237,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="SetDuration_Click"/>
        <Button Content="Generate Video" HorizontalAlignment="Left" Margin="260,459,0,0" Grid.Row="1" VerticalAlignment="Top" Width="145" Height="35"/>
        <Button Content="Add Music" HorizontalAlignment="Left" Margin="345,264,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="AddMusic_Click"/>
        <Label Content="Pictures" HorizontalAlignment="Left" Margin="44,43,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.132,-0.192"/>

    </Grid>
</Window>
